@model IEnumerable<ConnectDBShop.GioHang>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div id="page-content" class="single-page">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="breadcrumb">
                    <li>@Html.ActionLink("Trang chủ", "Index", "Home")</li>
                    <li>@Html.ActionLink("Giỏ hàng", "Index", "GioHang")</li>
                </ul>
            </div>
        </div>


        @foreach (var item in Model)
        {
        <div class="row">
            <div class="product well">
                
                <div class="col-md-3">
                    <div class="image">
                        @*@Html.Partial("_HinhGH", ShopOnline.Models.BUS.GioHangBUS.HinhGH())*@
                        <img src="~/Asset/img/@item.HinhChinh" />
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="caption">



                        @using (Html.BeginForm("CapNhat", "GioHang", FormMethod.Post))
                        {

                            <div class="name"><h3><a href="#" name="tensanpham">@item.TenSanPham</a></h3></div>
                            <div class="info">
                                <ul>
                                    <li><input name="masanpham" type="hidden" value="@item.MaSanPham" /></li>
                                    <li><input type="hidden" name="gia" value="@item.Gia" /></li>
                                    <li><input type="hidden" name="hinhchinh" value="@item.HinhChinh" /></li>
                                    <li><input type="hidden" name="tensanpham" value="@item.TenSanPham" /></li>
                                </ul>
                            </div>
                            <div class="price">Giá: @string.Format(System.Globalization.CultureInfo.GetCultureInfo("vi-VN"), "{0:c}", item.Gia)</div>
                            <div class="well"><label>Số lượng: </label> <input class="form-inline quantity" type="number" value="@item.SoLuong" min="1" max="999" name="soluong">
                            <input class="btn btn-2 " style ="margin-left:25px" type="submit" value="Cập nhật số lượng" /></div>
                        }



                        <div class="price">Tổng tiền sản phẩm: @string.Format(System.Globalization.CultureInfo.GetCultureInfo("vi-VN"), "{0:c}", item.TongTien)</div>
                        <hr>
                        <div class="btn btn-2 ">
                            <a href="@Url.Action("Xoa", "GioHang", new { masanpham = item.MaSanPham})" class="btn btn-default pull-right"  class="btn btn-2 " >Xóa khỏi giỏ hàng</a>
                        </div>
                    </div>
                </div>
                <div class="clear"></div>
            </div>
        </div>
        }
        <div class="row">
            <div class="col-md-4 col-md-offset-8 "  style="float:right">
                <center><a href="@Url.Action("Index", "MobiShop")" class="btn btn-1">Tiếp tục mua hàng</a></center>
            </div>
        </div>
        <div class="row">
            <div class="pricedetails"style="float:left;">
                <div class="col-md-4 col-md-offset-8"  style="float:left;width:500px">
                    <h6>Tổng tiền giỏ hàng</h6>
                    <table>
                        <tr>
                            <td>Tổng</td>
                            <td>@string.Format(System.Globalization.CultureInfo.GetCultureInfo("vi-VN"), "{0:c}", ViewBag.TongTien)</td>
                        </tr>
                        <tr>
                            <td></td>
                            <td>-----</td>
                        </tr>
                        <tr>
                            <td>Giảm giá</td>
                            <td>0 %</td>
                        </tr>
                        <tr style="border-top: 1px solid #333">
                            <td><h5>Tổng thành tiền</h5></td>
                            <td>@string.Format(System.Globalization.CultureInfo.GetCultureInfo("vi-VN"), "{0:c}", ViewBag.TongTien)</td>
                        </tr>
                    </table>
                    <center><a href="#" class="btn btn-1">Thanh Toán</a></center>
                </div>
            </div>
        </div>
    </div>
</div>

