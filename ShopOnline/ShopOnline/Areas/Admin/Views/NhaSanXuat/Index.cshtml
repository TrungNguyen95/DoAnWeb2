@model IEnumerable<ConnectDBShop.NhaSanXuat>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}

<style>
    table {
        border-collapse: collapse;
        width: 50%;
        margin: auto;
        text-align: center;
    }

    th, td {
        text-align: center;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #4B4B4B;
    }
    th {
        background-color: #007FFF;
        color: white;
    }
</style>

<h2 style="text-align: center;">Quản lý Hãng sản xuất</h2>
    <table>
        <tr>
            <th>Mã Hãng sản xuất</th>
            <th>Tên Hãng</th>
            <th>Tình trạng</th>
            <th colspan="2">
                <a href="@Url.Action("Create", "NhaSanXuat")"><img src="~/Asset/images/addNSX.png" /></a>
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaNhaSanXuat</td>
                <td>@item.TenNhaSanXuat</td>
                <td>@item.TinhTrang</td>
                <td>
                    <a href="@Url.Action("Edit", "NhaSanXuat", new { id = @item.MaNhaSanXuat})"><img src="~/Asset/images/edit.png" /></a>
                </td>
                <td>
                    <a href="@Url.Action("Xoa", "NhaSanXuat", new { id = @item.MaNhaSanXuat})"><img src="~/Asset/images/xoa.png" /></a>
                </td>
            </tr>
        }
        
    </table>
