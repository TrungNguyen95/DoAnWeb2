@model ConnectDBShop.LoaiSanPham
@{
    ViewBag.Title = "Xoa";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}

<style>
    input[type=text], select {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    input[type=submit] {
        width: 100%;
        background-color: #007FFF;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        input[type=submit]:hover {
            background-color: #0000FF;
        }
</style>

<h3 style="text-align: center">Khóa Loại sản phẩm</h3>

<div style="width:50%; margin:auto">
    @using (Html.BeginForm("Xoa", "LoaiSanPham", FormMethod.Post, new { @style = "with: 50%; margin: auto;" }))
    {
        <label for="fname">Mã Loại</label>
        <input type="text" id="fname" name="MaLoaiSanPham" required placeholder="Nhập mã loại sản phẩm..." style="background-color:#4B4B4B; color:#FFFFFF" value="@Model.MaLoaiSanPham" readonly>

        <label for="lname">Tên Loại</label>
        <input type="text" id="lname" name="TenLoaiSanPham" required placeholder="Nhập tên loại sản phẩm..." style="background-color:#4B4B4B; color:#FFFFFF" value="@Model.TenLoaiSanPham" readonly>

        <label for="country">Tình trạng hiện tại sẽ được chuyển sang "Khóa"</label>
            <select id="country" name="TinhTrang" style="background-color:#4B4B4B; color:#FFFFFF">
                @if (Model.TinhTrang == "1")
                {
                    <option value="1" selected>Khóa</option>
                }
                else
                {
                    <option value="0" selected>Mở</option>
                }
            </select>

            <input type="submit" value="Xác nhận">
    }
</div>

